<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vgold"
    tools:context=".activities.SplashScreenActivity">


    <ImageView
        android:id="@+id/vLogoIv"
        android:layout_width="373dp"
        android:layout_height="294dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/vlogo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sp_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="@string/digital_gold_gold_loan_foundation"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/vLogoIv" />



    <TextView
        android:id="@+id/sp_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
      android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/sp_Tv" />


    <ImageView
        android:id="@+id/sp_Img"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:src="@drawable/spscrn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_Tv"
        app:layout_constraintVertical_bias="0.673"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

