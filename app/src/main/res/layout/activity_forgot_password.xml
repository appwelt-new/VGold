<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gpld3"
    tools:context=".activities.ForgotPasswordActivity">


  <ScrollView
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
          app:layout_constraintTop_toBottomOf="@id/imgLogo"
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">


  <ImageView
      android:id="@+id/imgLogo"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginTop="20dp"
      android:layout_gravity="center"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/height_10"
      android:src="@drawable/vlogo" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imgLogo"
      android:layout_centerInParent="true"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="30dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/imgLogo"
      android:orientation="vertical">


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/height_25"
        android:gravity="center"
        android:text="Forgot Password ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AF133F"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/frgthint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_25"
        android:text="Just enter the email address you've used to register with us and we'll send you a reset link."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13dp"
         />
<!--    <EditText-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:drawableLeft="@drawable/email"-->
<!--        android:drawablePadding="@dimen/height_10"-->
<!--        android:hint="Enter Email ID"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/colorblack"
        app:hintTextAppearance="@style/mytext">

      <EditText
          android:id="@+id/edtEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:hint="E-Mail Address"
          android:drawableLeft="@drawable/email"
          android:drawablePadding="10dp"
          android:imeOptions="actionDone"
          android:inputType="text"
          android:singleLine="true"
          android:textSize="15dp"
          android:layout_gravity="center_vertical"
          android:gravity="center_vertical"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/BtnSubmitEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundborder1"
        app:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:text="Reset Password"
        style="@style/Button"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/iv_logo"
        android:src="@drawable/frgt4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/height_10"
        android:layout_width="150dp"
        android:layout_height="150dp"/>



  </LinearLayout>
      </LinearLayout>
  </ScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>