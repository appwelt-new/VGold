<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FeedbackFragment">


    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:rating="1"
        />

    <EditText
        android:id="@+id/edt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorblack"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginRight="@dimen/height_15"
        android:layout_below="@+id/ratingBar"
        android:hint="Comment"
        android:gravity="left"
        android:imeOptions="actionNext"
        android:background="@drawable/rounded_search"
        android:padding="8dp"
        android:inputType="textMultiLine"
        android:lines="4"
        android:layout_marginTop="@dimen/height_15"/>


    <Button
        android:id="@+id/btnSubmitFeedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_"
        android:backgroundTint="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/height_15"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginTop="@dimen/height_15"
        android:textColor="@color/colorwhite"
        android:layout_below="@+id/edt_comment"
        android:background="@drawable/roundborder1"/>

</RelativeLayout>